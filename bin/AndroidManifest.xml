<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.giiis.asee.qasee"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".QASEEActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".QASEEActivity" >
        </activity>
        <activity
            android:name=".AppSelected"
            android:label="@string/title_activity_app_selected"
            android:parentActivityName=".MenuActivity" >
        </activity>
        <activity
            android:name=".EstandarActivity"
            android:label="@string/title_activity_estandar"
            android:parentActivityName=".AppSelected" >
        </activity>
        <activity
            android:name=".ContrarelojActivity"
            android:label="@string/title_activity_contrareloj"
            android:parentActivityName=".AppSelected" >
        </activity>
        <activity
            android:name=".MultijugadorActivity"
            android:label="@string/title_activity_multijugador"
            android:parentActivityName=".AppSelected" >
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:label="@string/title_activity_registro"
            android:parentActivityName=".QASEEActivity" >
        </activity>
        <activity
            android:name=".CreateQuestionActivity"
            android:label="@string/title_activity_create_question"
            android:parentActivityName=".MenuActivity" >
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/title_activity_perfil"
            android:parentActivityName=".MenuActivity" >
        </activity>
        <activity
            android:name=".OpcionesActivity"
            android:parentActivityName=".MenuActivity" 
            android:label="@string/title_activity_opciones_activity" >
        </activity>
    </application>

</manifest>
